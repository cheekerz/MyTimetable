<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" >
	
    <TextView
        android:id="@+id/activity_progress_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_activity_progress"
        style="@style/Title"/>

    <TextView
        android:id="@+id/text_description_activity_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="8dp"
        android:text="@string/description_activity_progress"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="12sp" />
  	
  	<ScrollView 
	  	    android:id="@+id/scrollView1"
    		android:layout_width="match_parent"
        	android:layout_height="wrap_content" >

      		<LinearLayout
            	android:id="@+id/LinearLayout_progress"
            	android:layout_width="match_parent"
            	android:layout_height="wrap_content"
            	android:orientation="vertical">      		    
        	</LinearLayout>
       
	</ScrollView>

</LinearLayout>
